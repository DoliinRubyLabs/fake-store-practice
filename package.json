{
  "name": "template",
  "version": "1.0.0",
  "description": "RubyLabs CMS template",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "docker:up": "cd 'src/app/(payload)' && docker compose up -d",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "type-check": "tsc --noEmit",
    "format": "yarn type-check && yarn lint && yarn prettier",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "dev": "yarn docker:up && yarn generate:types && yarn generate:importmap && next dev --turbopack",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "@heroui/react": "^2.7.11",
    "@internationalized/date": "^3.8.2",
    "@payloadcms/db-postgres": "3.43.0",
    "@payloadcms/next": "3.43.0",
    "@payloadcms/payload-cloud": "3.43.0",
    "@payloadcms/plugin-seo": "^3.43.0",
    "@payloadcms/richtext-lexical": "3.43.0",
    "@payloadcms/ui": "3.43.0",
    "@react-aria/i18n": "^3.12.10",
    "@svgr/webpack": "^8.1.0",
    "@tanstack/react-query": "^5.81.2",
    "@tanstack/react-query-devtools": "^5.81.2",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "cross-env": "^7.0.3",
    "framer-motion": "^12.19.1",
    "graphql": "^16.11.0",
    "ky": "^1.8.1",
    "lucide-react": "^0.522.0",
    "luxon": "^3.6.1",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "payload": "3.43.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.58.1",
    "react-scan": "^0.3.4",
    "sharp": "0.34.2",
    "usehooks-ts": "^3.1.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.53.1",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.30",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "yarn@1.22.22",
  "volta": {
    "node": "22.16.0",
    "yarn": "1.22.22"
  }
}